<% include partials/header %>

<div class="container">
    <h2 class="my-4 text-center">Edit post</h2>
    <form action="/<%= foundPost._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="formGroupExampleInput">Title</label>
            <input type="text" class="form-control" id="formGroupExampleInput" value="<%= foundPost.title %>" name="title" required>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Image</label>
            <input type="url" class="form-control" id="formGroupExampleInput2" value="<%= foundPost.image %>" name="image" required>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput3">Text</label>
            <textarea type="text" class="form-control" id="formGroupExampleInput3" name="content" rows="8" cols="50" required><%= foundPost.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include partials/footer %>